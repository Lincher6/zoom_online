<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="style.css">

    <script src="https://kit.fontawesome.com/427c0539fa.js" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>

    <script>
        const ROOM_ID = "<%= roomId %>"
    </script>
    <title>Zoom Online</title>

</head>
<body>
    <div class="main">
        <div id="chat-burger">
            <i class="fas fa-times"></i>
        </div>
        <div id="info"></div>
        <div id="alert">cxvzxczv</div>
        <div class="main__left">
            <div class="main__left-room">
                <div id="video-grid"></div>
            </div>
            <div class="main__left-controls">
                <div class="main__left-controls-block">
                    <div id="controls__mute"></div>
                    <div id="controls__video"></div>
                </div>
                <div class="main__left-controls-block">
                    <div id="controls__security"></div>
                    <div id="controls__participants"></div>
                    <div id="controls__chat"></div>
                </div>
                <div class="main__left-controls-block">
                    <div id="controls__leave"></div>
                </div>
            </div>
        </div>
        <div class="main__right">
            <div class="main__right-title">
                CHAT
            </div>
            <div class="main__right-messages">
                <ul id="chat"></ul>
            </div>
            <div class="main__right-new">
                <div id="newMessage"></div>
            </div>
        </div>
    </div>

    <script src="script.js" type="module"></script>
</body>
</html>